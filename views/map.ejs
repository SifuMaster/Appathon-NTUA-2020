<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            background-image: url(background.jpg);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        .button {
            background-color: #4CAF50;
            /* Green */
            border: 2px solid black;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 36px;
            height: 140px;
            width: 80%;
        }

        .leaflet-container {
            height: 600px;
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appathon NTUA 2020</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
        integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
        crossorigin="" />
</head>

<body>

    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
        integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
        crossorigin="">
        </script>

    <div id="mapid"></div>


    <script> //copyining all passed vars so we can use them in the map
        var for_map = [];
        for_map.push([<%= light_rain_coords[0] %>, <%= light_rain_coords[1] %>, "<%= light_rain_name %>", "aqua.png"]);
        for_map.push([<%= moderate_rain_coords[0] %>, <%= moderate_rain_coords[1] %>, "<%= moderate_rain_name %>", "black.png"]);
        for_map.push([<%= heavy_intensity_rain_coords[0] %>, <%= heavy_intensity_rain_coords[1] %>, "<%= heavy_intensity_rain_name %>", "blue.png"]);
        for_map.push([<%= very_heavy_rain_coords[0] %>, <%= very_heavy_rain_coords[1] %>, "<%= very_heavy_rain_name %>", "gray.png"]);
        for_map.push([<%= fog_coords[0] %>, <%= fog_coords[1] %>, "<%= fog_name %>", "green.png"]);
        for_map.push([<%= dust_coords[0] %>, <%= dust_coords[1] %>, "<%= dust_name %>", "lime.png"]);
        for_map.push([<%= few_clouds_coords[0] %>, <%= few_clouds_coords[1] %>, "<%= few_clouds_name %>", "orange.png"]);
        for_map.push([<%= scattered_clouds_coords[0] %>, <%= scattered_clouds_coords[1] %>, "<%= scattered_clouds_name %>", "purple.png"]);
        for_map.push([<%= broken_clouds_coords[0] %>, <%= broken_clouds_coords[1] %>, "<%= broken_clouds_name %>", "red.png"]);
        for_map.push([<%= overcast_clouds_coords[0] %>, <%= overcast_clouds_coords[1] %>, "<%= overcast_clouds_name %>", "pink.png"]);
        for_map.push([<%= clear_sky_coords[0] %>, <%= clear_sky_coords[1] %>, "<%= clear_sky_name %>", "yellow.png"]);
        console.log(for_map)
    </script>

    <script src="js/map.js"></script>

    <br><br><br>

    <form action="/" method="get" style="display: flex; justify-content: center;">
        <button class="button" type="submit">Return To Date Pick</button>
    </form>

</body>

</html>